
<%#include "post.h" %>

<h1>Listing Post</h1>

<%== linkTo("Dashboard", QUrl("/Admin/dashboard")) %><br />

<%== linkTo("New entry", urla("entry")) %><br />
<br />
<table border="1" cellpadding="5" style="border: 1px #d0d0d0 solid; border-collapse: collapse;">
  <tr>
    <th>ID</th>
    <th>Blog ID</th>
    <th>Title</th>
    <th>Content</th>
  </tr>
<% tfetch(QList<Post>, postList); %>
<% for (QListIterator<Post> it(postList); it.hasNext(); ) {
     const Post &i = it.next(); %>
  <tr>
    <td><%= i.id() %></td>
    <td><%= i.blogId() %></td>
    <td><%= i.title() %></td>
    <td><%= i.content() %></td>
    <td>
      <%== linkTo("Show", urla("show", i.id())) %>
      <%== linkTo("Edit", urla("edit", i.id())) %>
      <%== linkTo("Remove", urla("remove", i.id()), Tf::Post, "confirm('Are you sure?')") %>
    </td>
  </tr>
<% } %>
</table>

